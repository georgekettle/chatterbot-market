<% color ||= 'primary' %>
<% case color %>
<% when 'primary' %>
  <% color_classes = 'ring-primary-500/10 text-primary-600 bg-primary-50' %>
<% when 'secondary' %>
  <% color_classes = 'ring-secondary-500/10 text-secondary-600 bg-secondary-50' %>
<% when 'tertiary' %>
  <% color_classes = 'ring-tertiary-500/10 text-tertiary-600 bg-tertiary-50' %>
<% when 'success' %>
  <% color_classes = 'ring-success-500/10 text-success-600 bg-success-50' %>
<% when 'danger' %>
  <% color_classes = 'ring-danger-500/10 text-danger-600 bg-danger-50' %>
<% when 'info' %>
  <% color_classes = 'ring-info-500/10 text-info-600 bg-info-50' %>
<% end %>

<span class="inline-flex items-center rounded-md  px-1.5 py-0.5 text-xs font-medium  ring-1 ring-inset "><%= text %></span>