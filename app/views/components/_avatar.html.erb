<% size ||= :sm %>
<% url ||= nil %>

<% if url.nil? %>
  <% case size %>
  <% when :xs %>
    <span class="inline-block h-6 w-6 overflow-hidden rounded-full bg-tertiary-100 flex-shrink-0 border border-tertiary-300">
      <svg class="h-full w-full text-tertiary-300" fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
    </span>
  <% when :sm %>
    <span class="inline-block h-8 w-8 overflow-hidden rounded-full bg-tertiary-100 flex-shrink-0 border border-tertiary-300">
      <svg class="h-full w-full text-tertiary-300" fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
    </span>
  <% when :md %>
    <span class="inline-block h-10 w-10 overflow-hidden rounded-full bg-tertiary-100 flex-shrink-0 border border-tertiary-300">
      <svg class="h-full w-full text-tertiary-300" fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
    </span>
  <% when :lg %>
    <span class="inline-block h-12 w-12 overflow-hidden rounded-full bg-tertiary-100 flex-shrink-0 border border-tertiary-300">
      <svg class="h-full w-full text-tertiary-300" fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
    </span>
  <% when :xl %>
    <span class="inline-block h-14 w-14 overflow-hidden rounded-full bg-tertiary-100 flex-shrink-0 border border-tertiary-300">
      <svg class="h-full w-full text-tertiary-300" fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
    </span>
  <% end %>
<% else %>
  <% case size %>
  <% when :xs %>
    <%= image_tag "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80", class: 'inline-block h-6 w-6 rounded-full flex-shrink-0' %>
  <% when :sm %>
    <%= image_tag "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80", class: 'inline-block h-8 w-8 rounded-full flex-shrink-0' %>
  <% when :md %>
    <%= image_tag "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80", class: 'inline-block h-10 w-10 rounded-full flex-shrink-0' %>
  <% when :lg %>
    <%= image_tag "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80", class: 'inline-block h-12 w-12 rounded-full flex-shrink-0' %>
  <% when :xl %>
    <%= image_tag "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80", class: 'inline-block h-14 w-14 rounded-full flex-shrink-0' %>
  <% end %>
<% end %>

