<% subtitle ||= nil %>

<div class="block sm:flex items-center justify-between mb-10">
  <div>
    <h1 class="text-3xl font-medium tracking-tight"><%= title %></h1>
    <% if subtitle %>
      <p class="text-sm text-tertiary-500 mt-2"><%= subtitle %></p>
    <% end %>
  </div>
  <div class="flex items-center space-x-2 mt-4 sm:mt-0">
    <%= yield %>
  </div>
</div>