<% subtitle ||= nil %>
<% back_path ||= nil %>
<% hide_breadcrumbs ||= false %>

<div class="block sm:flex items-center justify-between mb-10">
  <div>
    <% if back_path.present? %>
      <%= link_to back_path, class: 'btn mb-4 -ml-4' do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 mr-2 shrink-0">
          <path fill-rule="evenodd" d="M17 10a.75.75 0 01-.75.75H5.612l4.158 3.96a.75.75 0 11-1.04 1.08l-5.5-5.25a.75.75 0 010-1.08l5.5-5.25a.75.75 0 111.04 1.08L5.612 9.25H16.25A.75.75 0 0117 10z" clip-rule="evenodd" />
        </svg>
        Back
      <% end %>
    <% end %>
    <% unless hide_breadcrumbs %>
      <div class="mb-4">
        <%= render 'components/navigation/breadcrumbs' %>
      </div>
    <% end %>
    <h1 class="h1"><%= title %></h1>
    <% if subtitle %>
      <p class="text-tertiary-500 mt-2"><%= subtitle %></p>
    <% end %>
  </div>
  <div class="flex items-center space-x-2 mt-4 sm:mt-0">
    <%= yield %>
  </div>
</div>