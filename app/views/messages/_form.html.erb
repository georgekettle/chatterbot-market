<%= turbo_frame_tag dom_id(chat, :message_form) do %>
  <%= form_with(model: message, url: chat_messages_path(chat), data: { turbo_target: '_top' }) do |form| %>
    <div class="input-spacer">
      <%= render 'components/forms/errors', form: form %>

      <div class="ring-1 ring-tertiary-300 rounded-lg shadow flex items-center focus-within:ring-tertiary-900 focus-within:ring-1 overflow-hidden">
        <%= form.text_area :content, autofocus: true, rows: 1, placeholder: "Write a message for #{@chatbot.name}...", data: { controller: 'textarea-autogrow' }, class: 'resize-none border-0 ring-0 focus:ring-0 focus:outline-none' %>
        <div class="p-0.5 mt-auto">
          <%= form.button type: :submit, class: 'btn btn-primary p-2.5 rounded-lg' do %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
              <path d="M3.478 2.405a.75.75 0 00-.926.94l2.432 7.905H13.5a.75.75 0 010 1.5H4.984l-2.432 7.905a.75.75 0 00.926.94 60.519 60.519 0 0018.445-8.986.75.75 0 000-1.218A60.517 60.517 0 003.478 2.405z" />
            </svg>
            <span class="sr-only">Send</span>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>