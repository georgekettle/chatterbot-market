<% conversation_owner = current_account == conversation.account %>

<div class="bg-white shadow-sm border-b border-tertiary-300">
  <%= render 'shared/container' do %>
    <div class="flex items-center justify-between py-6 relative">
      <%= link_to :back, class: 'btn -ml-4' do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 mr-1">
          <path fill-rule="evenodd" d="M17 10a.75.75 0 01-.75.75H5.612l4.158 3.96a.75.75 0 11-1.04 1.08l-5.5-5.25a.75.75 0 010-1.08l5.5-5.25a.75.75 0 111.04 1.08L5.612 9.25H16.25A.75.75 0 0117 10z" clip-rule="evenodd" />
        </svg>
        Back
      <% end %>

      <div class="flex items-center justify-center absolute inset-0 pointer-events-none">
        <div class="flex items-center justify-center pointer-events-auto">
          <% if conversation_owner %>
            <%# Show chatbot %>
            <div>
              <%# Chatbot avatar %>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8">
                <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-2 sm:ml-3">
              <h1 class="text-sm font-medium text-tertiary-900 group-hover:text-tertiary-900"><%= conversation.chatbot.name.truncate(20) %></h1>
            </div>
          <% else %>
            <%# Show account %>
            <div>
              <%# User avatar %>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8">
                <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-2 sm:ml-3">
              <h1 class="text-sm font-medium text-tertiary-900 group-hover:text-tertiary-900"><%= conversation.account.name.truncate(20) %></h1>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>