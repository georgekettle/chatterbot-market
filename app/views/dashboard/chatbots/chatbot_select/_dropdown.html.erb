<div class="relative">
  <button class="card p-4 flex items-center justify-between hover:bg-tertiary-50 w-full" id="chatbotSelectButton" data-dropdown-toggle="chatbotSelect" data-dropdown-placement="bottom-start" type="button">
    <div class="flex items-center space-x-4">
      <%= render 'components/avatar', size: :sm %>
      <div>
        <p class="header-sm text-left line-clamp-1"><%= chatbot.name %></p>
        <%= render 'dashboard/chatbots/chatbot_select/status', chatbot: chatbot %>
      </div>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-tertiary-500 shrink-0 ml-2">
      <path fill-rule="evenodd" d="M10 3a.75.75 0 01.55.24l3.25 3.5a.75.75 0 11-1.1 1.02L10 4.852 7.3 7.76a.75.75 0 01-1.1-1.02l3.25-3.5A.75.75 0 0110 3zm-3.76 9.2a.75.75 0 011.06.04l2.7 2.908 2.7-2.908a.75.75 0 111.1 1.02l-3.25 3.5a.75.75 0 01-1.1 0l-3.25-3.5a.75.75 0 01.04-1.06z" clip-rule="evenodd" />
    </svg>
  </button>

  <!-- Dropdown menu -->
  <div id="chatbotSelect" class="elevated-card hidden w-full">
    <ul role="list" class="relative z-0 divide-y divide-gray-200">
      <% chatbots.each do |bot| %>
        <%= render 'dashboard/chatbots/chatbot_select/option', chatbot: bot, selected: bot == chatbot %>
      <% end %>
    </ul>
  </div>
</div>