<div class="flex items-center space-x-1">
  <% if chatbot.live? %>
    <div class="rounded-full w-1.5 h-1.5 bg-success-500"></div>
    <p class="text-xs font-medium text-success-600"><%= chatbot.status&.capitalize %></p>
  <% else %>
    <div class="rounded-full w-1.5 h-1.5 bg-info-500"></div>
    <p class="text-xs font-medium text-info-600"><%= chatbot.status&.capitalize %></p>
  <% end %>
</div>