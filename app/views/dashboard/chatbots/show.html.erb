<%= render 'components/headers/chatbot_dashboard', chatbot: @chatbot %>

<%= render 'shared/container' do %>
  <div class="pt-16 pb-6">
    <%= render 'components/headers/page_header', title: "Overview", subtitle: "Your key metrics for '#{@chatbot.name}'" %>
  </div>
  
  <div class="grid gap-8 grid-cols-1">
    <% 3.times do %>
      <div>
        <h3 class="text-lg mb-2 tracking-tight">Metrics</h3>
        <div class="h-56 bg-tertiary-200 rounded"></div>
      </div>
    <% end %>
  </div>
<% end %>
 