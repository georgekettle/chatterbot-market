<%= form_with model: csv_fine_tune, url: dashboard_chatbot_csv_fine_tunes_path(chatbot) do |f| %>
  <div class="input-spacer">
    <%= render 'components/forms/errors', object: csv_fine_tune, form: f %>
    <%# Name %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <%# Description %>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :file, 'Upload CSV file' %>
      <%= f.file_field :file, accept: 'text/csv' %>
    </div>
    <%= f.submit 'Upload' %>
  </div>
<% end %>