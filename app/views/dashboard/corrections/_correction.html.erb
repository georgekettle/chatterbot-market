<%= content_tag :tr, id: dom_id(correction), class: 'align-top' do %>
  <td class="py-6 pl-4 pr-3 sm:pl-4 space-y-2 text-tertiary-500 bg-gradient-to-r from-danger-100 via-white" data-controller="read-more" data-read-more-more-text-value="Read more" data-read-more-less-text-value="Read less">
    <p data-read-more-target="content" class="overflow-hidden">
      <%= correction.message.content %>
    </p>

    <button data-action="read-more#toggle" data-read-more-target="toggle" class="mt-2 underline underline-offset-4 text-tertiary-900 text-sm hidden">Read more</button>
  </td>
  <td class="py-6 pl-4 pr-3 sm:pl-4 text-tertiary-500 bg-gradient-to-r from-success-50 via-white" data-controller="read-more" data-read-more-more-text-value="Read more" data-read-more-less-text-value="Read less">
    <p data-read-more-target="content" class="overflow-hidden">
      <%= correction.response %>
    </p>

    <button data-action="read-more#toggle" data-read-more-target="toggle" class="mt-2 underline underline-offset-4 text-tertiary-900 text-sm hidden">Read more</button>
  </td>
  <td class="relative whitespace-nowrap py-6 pl-3 pr-4 font-medium sm:pr-4">
    <div class="flex items-center">
      <%= link_to edit_correction_path(correction), data: { turbo_frame: :turbo_modal }, class: "btn rounded-full p-2" do %>
        <span class="sr-only">Edit</span>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
          <path d="M2.695 14.763l-1.262 3.154a.5.5 0 00.65.65l3.155-1.262a4 4 0 001.343-.885L17.5 5.5a2.121 2.121 0 00-3-3L3.58 13.42a4 4 0 00-.885 1.343z" />
        </svg>
      <% end %>
      <%= link_to correction_path(correction), data: { turbo_method: :delete, turbo_confirm: "Are you sure? You can't undo this.", turbo_frame: :_top }, class: "btn rounded-full p-2" do %>
        <span class="sr-only">Delete</span>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
          <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
  </td>
<% end %>