<%= turbo_frame_tag dom_id(chatbot, :chat_form), target: "_top" do %>
  <%= form_with model: chat, url: dashboard_chatbot_chats_path(chatbot) do |form| %>
    <%= render 'components/forms/errors', form: form %>

    <div class="ring-1 ring-tertiary-300 rounded shadow flex items-center focus-within:ring-primary-500 focus-within:ring-2 overflow-hidden">
      <%= form.fields_for :messages do |message_form| %>
        <%= message_form.label :content, class: 'sr-only' %>
        <%= message_form.text_field :content, placeholder: "Write a message for #{@chatbot.name}...", class: 'border-0 ring-0 focus:ring-0 focus:outline-none' %>
      <% end %>
      <div class="p-0.5">
        <%= form.button type: :submit, class: 'btn btn-primary p-2 bg-primary-600 hover:bg-primary-700' do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
            <path d="M3.478 2.405a.75.75 0 00-.926.94l2.432 7.905H13.5a.75.75 0 010 1.5H4.984l-2.432 7.905a.75.75 0 00.926.94 60.519 60.519 0 0018.445-8.986.75.75 0 000-1.218A60.517 60.517 0 003.478 2.405z" />
          </svg>
          <span class="sr-only">Send</span>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>