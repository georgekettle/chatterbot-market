<%= render 'shared/container' do %>
  <div class="divide-y divide-tertiary-300">
    <%# Info about account %>
    <div class="py-16">
      <div class="-ml-6 mb-4">
        <%= render 'components/navigation/back_btn' %>
      </div>
      <div class="flex space-x-8 relative">
        <%= render 'components/avatar', size: :xl %>
        <div>
          <%# Account name %>
          <h1 class="h1"><%= @account.name %></h1>
          <p class="mt-2 text-tertiary-500"><%= @account.description %></p>
          <% if @account.url.present? %>
            <%= link_to full_url(@account.url), class: 'text-tertiary-500 inline-block mt-4 link-underline flex items-center', target: '_blank', rel: 'nofollow' do %>
              <%= naked_url(@account.url) %>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 ml-2 shrink-0">
                <path fill-rule="evenodd" d="M4.25 5.5a.75.75 0 00-.75.75v8.5c0 .414.336.75.75.75h8.5a.75.75 0 00.75-.75v-4a.75.75 0 011.5 0v4A2.25 2.25 0 0112.75 17h-8.5A2.25 2.25 0 012 14.75v-8.5A2.25 2.25 0 014.25 4h5a.75.75 0 010 1.5h-5z" clip-rule="evenodd" />
                <path fill-rule="evenodd" d="M6.194 12.753a.75.75 0 001.06.053L16.5 4.44v2.81a.75.75 0 001.5 0v-4.5a.75.75 0 00-.75-.75h-4.5a.75.75 0 000 1.5h2.553l-9.056 8.194a.75.75 0 00-.053 1.06z" clip-rule="evenodd" />
              </svg>
            <% end %>
            <%# link_to 'websiteofaccount.com', @account.url, class: 'text-tertiary-500 hover:text-tertiary-900 link-underline mt-4 inline-block' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%# Public chatbots %>
  <div class="pt-16 pb-4 border-t border-tertiary-200">
    <%= render 'components/headers/page_header_2', title: "Chatbots" %>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% @chatbots.each do |chatbot| %>
      <%= render chatbot %>
    <% end %>
  </div>
  <div class="py-10 flex justify-center">
    <%= render 'pagy/pagination', pagy: @pagy %>
  </div>
<% end %>