<li>
  <div class="bg-white relative flex items-center space-x-3 px-4 py-3 focus-within:ring-2 focus-within:ring-inset focus-within:ring-primary-400 hover:bg-gray-50">
    <%= render 'chatbots/avatar', chatbot: chatbot, size: :sm %>
    <div class="min-w-0 flex-1">
      <%= link_to new_chat_path(chatbot_id: chatbot), class: 'focus:outline-none' do %>
        <!-- Extend touch target to entire panel -->
        <span class="absolute inset-0" aria-hidden="true"></span>
        <p class="header-xs line-clamp-1"><%= chatbot.name %></p>
        <% if selected %>
          <%# show badge with selected %>
          <div class="absolute inset-y-0 right-0 flex items-center pr-4">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-tertiary-900">
              <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm13.36-1.814a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z" clip-rule="evenodd" />
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</li>