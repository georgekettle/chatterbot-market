<div id="<%= dom_id chatbot %>" class="card p-6">
  <div class="flex">
    <div class="rounded-full h-8 w-8 bg-tertiary-300 mr-4 shrink-0"></div>
    <div class="w-full grow-1">
      <p class="font-medium text-md tracking-tight"><%= chatbot.name %></p>
      <p class="text-sm text-gray-500"><%= chatbot.account.name %></p>
      <div class="flex items-center justify-end mt-4">
        <%= link_to new_chatbot_chat_path(chatbot), class: 'btn btn-secondary' do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 mr-1">
            <path fill-rule="evenodd" d="M5.337 21.718a6.707 6.707 0 01-.533-.074.75.75 0 01-.44-1.223 3.73 3.73 0 00.814-1.686c.023-.115-.022-.317-.254-.543C3.274 16.587 2.25 14.41 2.25 12c0-5.03 4.428-9 9.75-9s9.75 3.97 9.75 9c0 5.03-4.428 9-9.75 9-.833 0-1.643-.097-2.417-.279a6.721 6.721 0 01-4.246.997z" clip-rule="evenodd" />
          </svg>
          Chat now
        <% end %>
      </div>
    </div>
  </div>
</div>
