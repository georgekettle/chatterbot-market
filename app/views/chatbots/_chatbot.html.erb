<div id="<%= dom_id chatbot %>" class="card">
  <div class="flex p-6">
    <div class="mr-6">
      <%= render 'chatbots/avatar', chatbot: chatbot %>
    </div>
    <div class="w-full grow-1 space-y-6">
      <div class="space-y-2">
        <div class="flex items-center justify-between space-x-2">
          <p class="font-medium text-md tracking-tight"><%= chatbot.name %></p>
          <%= link_to '#', class: 'btn rounded-full p-2' do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 shrink-0">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0111.186 0z" />
            </svg>
          <% end %>
        </div>
        <p class="text-base tracking-tight text-gray-500 line-clamp-2 pr-12"><%= chatbot.description %></p>
      </div>
      <div class="flex items-center space-x-6">
        <span class="text-sm font-medium flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-3.5 h-3.5 mr-0.5">
            <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
          </svg>
          4.5
          <span class="text-tertiary-500 font-normal ml-1">(123)</span>
        </span>
        <div class="flex items-center space-x-2">
          <p class="text-sm link-underline"><%= chatbot.account.name %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="border-t border-tertiary-300">
    <%= link_to chatbot_path(chatbot), class: 'btn btn-lg btn-secondary bg-tertiary-100 hover:bg-tertiary-200 w-full rounded-none border-none group' do %>
      See more

      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 ml-2 shrink-0 group-hover:translate-x-1 transition-all duration-200 ease-in-out">
        <path fill-rule="evenodd" d="M5 10a.75.75 0 01.75-.75h6.638L10.23 7.29a.75.75 0 111.04-1.08l3.5 3.25a.75.75 0 010 1.08l-3.5 3.25a.75.75 0 11-1.04-1.08l2.158-1.96H5.75A.75.75 0 015 10z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </div>
</div>
