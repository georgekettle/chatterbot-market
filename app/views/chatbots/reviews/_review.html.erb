<div class="card p-6">
  <div class="flex justify-between">
    <%# <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 mr-4 text-info-500">
      <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
    </svg> %>
    <div class="space-x-4 flex items-start">
      <%= render 'components/avatar', size: :xs %>
      <div>
        <p class="mb-1"><%= review.user.name %></p>
        <div data-controller="read-more" data-read-more-more-text-value="Read more" data-read-more-less-text-value="Read less">
          <p class="text-base tracking-tight text-gray-500" data-read-more-target="content"><%= review.comment %></p>

          <button data-action="read-more#toggle" data-read-more-target="toggle" class="hidden text-sm mt-2 link-underline">Read more</button>
        </div>
      </div>
    </div>
    <div class="shrink-0">
      <%= render 'components/badges/badge', text: review.rating, color: 'info' do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-3 h-3 mr-0.5">
          <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
    <% if false %>
      <p class="font-medium text-2xl shrink-0"><%= review.rating %> <span class="text-sm text-tertiary-500">/ 5</span></p>
    <% end %>
  </div>
</div>